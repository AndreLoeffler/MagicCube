{% extends 'BinaerpilotenMagicBundle::index.html.twig' %}

{% block content %}
    <h1>BatchItem Liste aller anzulegender Karten</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Name</th>
                <th>In Bearbeitung</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('batchitem_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>
                {%  if entity.working %}von <span style="color: red;">{{ entity.working.name }}</span>{% endif %}
                </td>
                <td>{{ form(deleteForms[entity.id]) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li><a href="{{ path('batch_new') }}">Create a new entry</a></li>
    </ul>
{% endblock %}
