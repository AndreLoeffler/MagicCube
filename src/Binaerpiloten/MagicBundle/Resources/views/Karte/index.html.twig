{% extends 'BinaerpilotenMagicBundle::index.html.twig' %}

{% block content %}
    <h1>Karte list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Anzahl</th>
                <th>Typ</th>
                <th>Farbe</th>
                <th>Stichwort</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('karte_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.anzahl }}</td>
                <td>
                	<ul>
                		{% for t in entity.typ %}
                			<li>{{ t }}</li>
                		{% endfor %}
                	</ul>
                </td>
                <td>
                	<ul>
                		{% for f in entity.farbe %}
                			<li>{{ f }}</li>
                		{% endfor %}	
                	</ul>
                </td>
                
                <td>
                <ul>
                    <li>
                        <a href="{{ path('karte_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('karte_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('karte_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
